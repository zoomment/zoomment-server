{
  "name": "zoomment-server",
  "version": "1.0.0",
  "description": "Open Source Self-Hosted Comment System",
  "main": "./index.ts",
  "scripts": {
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'ts-node -r tsconfig-paths/register ./index.ts'",
    "start": "npm run build && pm2 start ./dist/ecosystem.config.js",
    "start:only": "pm2 start ./dist/ecosystem.config.js",
    "restart": "npm run build && pm2 restart ZOOMMENT",
    "kill": "pm2 delete ZOOMMENT",
    "build": "tsup && cp ecosystem.config.js dist/",
    "lint": "eslint src/**/*.ts --fix",
    "prettier": "npx prettier ./ --check",
    "prettier:fix": "npm run prettier -- --write",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "Tigran Simonyan",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.12",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.0",
    "nodemailer": "^7.0.12",
    "sanitize-html": "^2.17.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.14",
    "@types/sanitize-html": "^2.16.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "nodemon": "^3.1.9",
    "pm2": "^5.4.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
